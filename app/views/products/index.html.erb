<p id="notice"><%= notice %></p>

<% if current_user %>
<h4> Bonjour <u><%= current_user.firstname %></u> et bienvenu sur E-Cat !</h4>
<%= link_to 'Deconnexion', destroy_user_session_path%>
  <% else %>
  <%= link_to 'Connexion', new_user_session_path %>
  <%= link_to 'Inscription', new_user_registration_path %>
<% end %>

<h1>Produits</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Nom du E-cat</th>
      <th>Description</th>
      <th>Prix</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%if product.image.attached? %>
            <%= image_tag product.image, width:"30%" %>
          <%end%>
        </td>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.price %> € </td>
        <% if user_signed_in? %>
          <td><%= link_to 'Ajouter au panier', line_items_path(product_id: product.id), method: 'POST' %></td>
        <%else%>
          <td><%= link_to 'Ajouter au panier', new_user_session_path %></td>
        <%end%>
        <td><%= link_to 'Voir', product %></td>
        <td><%= link_to 'Modifier', edit_product_path(product) %></td>
        <td><%= link_to 'Supprimer', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Créer un produit', new_product_path %>
