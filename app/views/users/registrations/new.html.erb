
  <div class="text-align-center bg-img">
    <h1>Inscription</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <div class="row form-group ">
        <div class="col-md-6 ">
          <%= f.label :Prénom, class: 'white' %><br/> 
          <%= f.text_field :firstname, class: 'form-control', autofocus: true, required: true %>
        </div>
        <div class="col-md-6">
          <%= f.label :Nom, class: 'white' %><br />
          <%= f.text_field :lastname, class: 'form-control', autofocus: true, required: true %>
        </div>
      </div>

      <div class="row form-group">
        <div class="col-md-12">
          <%= f.label :avatar, class: 'white' %>
          <em>(optionel)</em><br />
          <div class="fileUpload btn btn-primary">
            <%= f.file_field :avatar, class: 'form-control upload', accept: "image/png, image/gif, image/jpeg" %>
            <span>Depuis mon ordinateur ...</span>
            <input type="file" class="upload" />
            <% if @user.avatar.attached? %>
              <%= image_tag @user.avatar %>
            <%end%>
          </div>
        </div>
      </div>

      <div class="row form-group">
        <div class="col-md-12">
          <%= f.label :email, class: 'white' %><br />
          <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class="row form-group">
        <div class="col-md-12">
          <%= f.label :password, class: 'white' %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caractères minimum)</em>
          <% end %><br />
          <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
        </div>
      </div>
      <div class="actions">
      <%= f.submit "Sign up", :class => "btn btn-primary btn-outline btn-xs" %>
        <%= link_to 'Déja inscrit ?', new_user_session_path, :class => "white" %>
      </div>
    <%end%>
    </form>		
  </div>
